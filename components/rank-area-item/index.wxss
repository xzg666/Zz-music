/* components/rank-area-item/index.wxss */
.rank-area-item{
  width: 100%;
  height: 220rpx;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  background-color: #eee;
  
}
.left{
  flex: 1;
  font-size: 24rpx;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}
.title{
  font-size: 34rpx;
  font-weight: 600;
}
.rank-list{
  width: 100%;
}
.rank-item{
  width: 450rpx;
  color: #333;
  white-space: nowrap;
  margin: 12rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
}
.right{
  width: 35%;
  position: relative;
}
.image{
  width: 100%;
  height: 100%;
  /* display: block; */
}

.play-count{
  position: absolute;
  right: 8rpx;
  bottom: 10rpx;
  color: #fff;
  font-size: 22rpx;
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
  background: rgba(0,0,0,.5);
}