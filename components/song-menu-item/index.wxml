<!--components/song-menu-item/index.wxml-->
<wxs src="../../utils/format.wxs" module="format" />
<view class="item">
  <view class="top">
    <image class="image" src="{{item.coverImgUrl}}" mode="widthFix"></image>
    <view class="play-count">{{format.formatCount(item.playCount)}}</view>
  </view>
  <view class="bottom">
    {{item.name}}
  </view>

</view>



