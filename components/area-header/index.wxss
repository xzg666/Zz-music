/* components/area-header/index.wxss */
.area-header{
  display: flex;
  justify-content: space-between;
  height: 88rpx;
  align-items: center;
}
.title{
  font-size: 36rpx;
  font-weight: 700;
}
.slot{
  font-size: 28rpx;
  color: #777;
  align-items: center;
}
.slot:empty + .default {
  display: flex;
}
.default{
  display: none;
  /* display: flex; */
  font-size: 28rpx;
  color: #777;
  align-items: center;
}
.icon{
  width: 50rpx;
  height: 50rpx;
}