page{
  padding: 230px 12px 0 12px;
  box-sizing: border-box;
  
}
.video{
  width: 100%;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  /* height: 225px; */
}

.name{
  font-weight:bold;
  font-size: 30rpx;
}
 .aName,.others{
   font-size: 25rpx;
   color: gray;
   margin-top: 6px;
 }

 /* 推荐视频 */
 .pro{
   width: 100%;
   margin-top: 30px;
 }
 .title{
  font-size: 30rpx;
 }
 .item{
   display: flex;
   margin-top: 12px;
 }
 .item-img{
   width: 250rpx;
   border-radius: 12rpx;
 }
 .item-prod{
   margin-left: 6px;
   font-size: 25rpx;
   display: flex;
   flex-direction: column;
   justify-content: space-between;
   padding-bottom: 10px;
   box-sizing: border-box;
 }
.item-title{
  font-size: 28rpx;
   /* 显示两行 */
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-line-clamp: 2;
   -webkit-box-orient: vertical;
   display: -moz-box;
   -moz-line-clamp: 2;
   -moz-box-orient: vertical;
   word-wrap: break-word;
   word-break: break-all;
   white-space: normal;
   overflow: hidden;
}