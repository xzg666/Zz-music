/* pages/music-player/index.wxss */
.bg-img ,.bg-cover{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: -1;
  
}
.bg-cover{ 
  background-color: rgba(0,0,0,.6);
  backdrop-filter: blur(5px);
}
.tab{
  display: flex;
  font-size: 28rpx;
  color: #999;
  justify-content: center;
}
.diveder{
  margin: 0 5rpx;
}
.active{
  color: #fff;
}
/* 内容 */

.music{
  padding: 30rpx 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.album {
  flex: 4;
  text-align: center;
  align-items: center;
  margin-top: 6%;
}
.album .image {
  width: 100%;
  border-radius: 20rpx !important;
  
}
.info .name{
  font-size: 48rpx;
  font-weight: 700;
}
.info .arname{
  margin: 15rpx 0;
}
.info .arname,.info .alia{
  font-size: 32rpx;
  color: #ccc;
}
/* 歌词 */
.lyric{
  text-align: center;
  font-size: 36rpx;
  color: #0f0;
  flex: 0.5;
  padding: 60rpx 0;
  box-sizing: border-box;
  
}
/* 进度 */
.progress {
  margin: 20rpx 0;
}

.slider {
  margin: 0 0 18rpx 20rpx;
}
.time{
  display: flex;
  justify-content: space-between;
  color: #ccc;
  font-size: 22rpx;
}
/* 操作 */
.operation{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.operation .btn {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  line-height: 60rpx;
}

.operation .btn-mode {
  width: 80rpx;
  height: 80rpx;
}

.operation .btn-pause {
  width: 130rpx;
  height: 130rpx;
}

/* 歌词 */
.lyric-list{
  height: 100%;
  color: #fff;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.item {
  height: 35px;
  line-height: 35px;
  font-size: 28rpx;
  text-align: center;
  color: #989898;

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.lyric-list .active{
  font-size: 36rpx;
  color: #0f0;
}