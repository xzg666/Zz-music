<view class="home">
  <!-- 搜索框 -->
  <van-search 
    shape="round"
    placeholder="搜索您喜欢的歌曲~"
    background="#fafafa"
    disabled 
    bind:click-input="handleSearchClick"
  />

  <!-- 轮播图 -->
  <swiper class="swiper" 	indicator-dots autoplay circular style="height: {{swiperHeight}}px;">
        <block wx:for="{{banners}}" wx:key="index">
          <swiper-item>
            <image 
            class="image" 
            src="{{item.pic}}" 
            mode="widthFix"
            bindload="handleSwiperImageLoaded"
            ></image>
          </swiper-item>
        </block>
  </swiper>

  <!-- 推荐 -->
  <view class="recomment-songs">
    <area-header title="推荐歌曲" bind:click="handleMoreClick"></area-header>
    <view class="songs-list" wx:if="{{recommendSongs.length>0}}">
      <block wx:for="{{recommendSongs}}" wx:key="id" wx:if="{{recommendSongs.length>0}}">
        <song-item-v1 item="{{item}}"></song-item-v1>
      </block>
    </view>
  </view>

  <!-- 热门歌单 -->
  <song-menu-area  
    title="热门歌单" 
    songMenu="{{hotSongMenu}}" 
    wx:if="{{hotSongMenu.length>0}}"
  ></song-menu-area>
  <!-- 推荐歌单 -->
  <song-menu-area 
    title="推荐歌单" 
    songMenu="{{recommendSongMenu}}" 
    wx:if="{{recommendSongMenu.length>0}}"
  ></song-menu-area>

  <!-- 巅峰榜 -->
  <area-header title="巅峰榜" showRight="{{false}}"></area-header>
  <view class="rank-list" >
    <block wx:for="{{rankings}}" wx:key="name" >
      <rank-area-item item="{{item}}" bindtap="handleRankingItemClick"
                         data-idx="{{index}}">></rank-area-item> 
    </block>
  </view>
  
</view>
